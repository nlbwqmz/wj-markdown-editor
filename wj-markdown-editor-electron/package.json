{
  "author": {
    "name": "魏杰",
    "email": "bxqyher@outlook.com"
  },
  "homepage": "https://github.com/nlbwqmz/wj-markdown-editor",
  "description": "markdown编辑器",
  "name": "wj-markdown-editor",
  "version": "2.5.1",
  "main": "src/main.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=dev electron .",
    "static": "electron .",
    "make": "cd ../wj-markdown-editor-web && npm install && npm run build && cd ../wj-markdown-editor-electron && npm install && electron-builder",
    "build": "electron-builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix"
  },
  "build": {
    "publish": {
      "provider": "generic",
      "url": ""
    },
    "productName": "wj-markdown-editor",
    "directories": {
      "output": "electron-build"
    },
    "files": [
      "!config.json",
      "!img/**"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "wj-markdown-editor",
      "menuCategory": "wj-markdown-editor",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "installerIcon": "./icon/favicon.ico",
      "uninstallerIcon": "./icon/favicon.ico",
      "installerHeaderIcon": "./icon/favicon.ico",
      "perMachine": true,
      "include": "./installer.nsh"
    },
    "win": {
      "artifactName": "${productName}-${platform}-${arch}-${version}.${ext}",
      "icon": "./icon/favicon.ico",
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ],
      "fileAssociations": [
        {
          "ext": [
            "md"
          ],
          "name": "Markdown File"
        }
      ]
    },
    "linux": {
      "icon": "./icon",
      "category": "Utility",
      "artifactName": "${productName}-${platform}-${arch}-${version}.${ext}",
      "mimeTypes": [
        "text/markdown"
      ],
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        }
      ],
      "fileAssociations": [
        {
          "ext": [
            "md"
          ],
          "mimeType": "text/markdown",
          "name": "Markdown File"
        }
      ]
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dayjs": "^1.11.13",
    "electron-log": "^5.3.4",
    "electron-screenshots": "^0.5.27",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.2",
    "fs-extra": "^11.3.0",
    "mime-types": "^3.0.1",
    "nanoid": "^5.1.5",
    "node-schedule": "^2.1.1",
    "semver": "^7.7.1"
  }
}
